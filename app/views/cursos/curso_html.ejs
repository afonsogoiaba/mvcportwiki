<!DOCTYPE html>
<html>
	<head>
		<title>Portwiki</title>
		<!-- Links e metas -->
		<meta charset="utf-8">
    <base href="/">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="css/portwiki.css">
    <link rel="stylesheet" type="text/css" href="css/curso-html.css">
		<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <script type = "text/javascript" src = "http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
	</head>
	<body>
		<!-- Cabeçalho -->
		<header>
      <div class="menu">
        <div id="myNav" class="overlay">
          <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
          <!-- "menu" -->
          <div id="nav" class="overlay-content">
            <a href="/portwiki">Home</a>
            <a href="/form_cadastro_user">Cadastro</a>
            <a href="/form_login_user">Login</a>
          </div>
        </div>
          <a href="#">
            <img src="img/menu.png" width="40" height="30" onclick="openNav()">
          </a>
      </div>

      <div class="logo">
        <img src="img/logo-portwiki.png" width="40" height="40">
        <a href="portwiki"><h1>Port<b>wiki</b></h1></a>
      </div>
      <!-- Menu web-->
      <nav>
        <ul>
          <li><a href="/portwiki">Home</a></li>
          <li><a href="/form_cadastro_user">Cadastro</a></li>
          <li><a href="/form_login_user">Login</a></li>
        </ul>
      </nav>
    </header>
    <!-- Fim cabeçalho -->
    
    <!-- Começo Conteúdo -->
    <main>
      <section class="home-curso">
        <div class="lista">
          <div class="name">
            <h2>Painel do curso</h2>
          </div>
          <ul>
            <%for(var i = 0 ; i < aula.length;i++){%>
              <li><a href="/reload/<%=aula[i].id_aula%>"><%=aula[i].sub_titulo%></a></li>
            <%}%>
          </ul>
        </div>

        <div class="main-layout">
          <h2><%=aula[0].nome_curso %></h2>
          <div class="main-vrau">
            <div class="info-curso">
              <h3>Informações do curso</h3>
              <ul>
                <li><b>Nome: </b><%=aula[0].nome_curso %></li>
                <li><b>Postagem: </b><%=aula[0].postagem %></li>
                <li><b>Conteúdo: </b><%=aula[0].conteudo %></li>
                <li><b>Minutos/video: </b><%=aula[0].media_minutos %></li>
              </ul>

              <div class="linha"></div>

              <div class="autor-curso">
                <img src="img/evandro.jpg" width="100">
                <h3><%=aula[0].nome %> <%=aula[0].sobrenome %></h3>
                <span><%=aula[0].email %></span>
                <p><%=aula[0].desc_usuario %></p>
              </div>
            </div>
            
            <div class="lista-aula">
              <div class="aula">
                <div class="top-aula">
                  <img src="img/numero.png" width="40">
                  <div class="texto"> 
                    <p>Aula <%=aula[0].numero_aula %></p>
                    <h3><%=aula[0].sub_titulo %></h3>
                  </div>
                </div>
                <div class="curso">
                  <p class="text-desc"><%=aula[0].desc_aula %></p>
                  <iframe  src="<%=aula[0].link_video%>" width="900" height="500" frameborder="0"allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
              </div>
            </div>

          </div>
        </div>
      </section>
    </main>
    <!-- Fim Conteúdo -->
    <!-- Rodapé -->
    <footer>
      <p>&copy; Afonso Goiaba</p>
      <a href="https://github.com/afonsogoiaba">github.com/afonsogoiaba</a>
    </footer>
    <!-- Fim rodapé -->
  </body>
</html>






